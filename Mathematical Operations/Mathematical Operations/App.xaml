<Application x:Class="Mathematical_Operations.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Mathematical_Operations"
             xmlns:viewmodels="clr-namespace:Mathematical_Operations.ViewModels"
             xmlns:views="clr-namespace:Mathematical_Operations.Views"
             StartupUri="MainWindow.xaml">
    <Application.Resources>

        <DataTemplate DataType="{x:Type viewmodels:CalculatorViewModel}">
            <views:CalculatorView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewmodels:EquationsViewModel}">
            <views:EquationsView/>
        </DataTemplate>


        <DataTemplate DataType="{x:Type viewmodels:FunctionsViewModel}">
            <views:FunctionsView/>
        </DataTemplate>

    </Application.Resources>
</Application>
